name: AstridAI Backend Docker CI/CD

on:
  push:
    branches: [master]

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Setup SSH
        uses: webfactory/ssh-agent@v0.7.0
        with:
          ssh-private-key: ${{ secrets.SSH_PRIVATE_KEY }}

      - name: Add SSH host key
        run: |
          mkdir -p ~/.ssh
          ssh-keyscan ${{ secrets.SSH_HOST }} >> ~/.ssh/known_hosts

      - name: Generate deployment folder and prepare secrets
        run: |
          export DEPLOY_DIR="backend-app-$(date +%Y%m%d%H%M%S)"
          echo "DEPLOY_DIR=$DEPLOY_DIR" >> $GITHUB_ENV

          echo "${{ secrets.CONFIG }}" | base64 -d > config.py
          echo "${{ secrets.CONSTANTS }}" | base64 -d > constants.py
          echo "${{ secrets.SERVICE_ACC_KEY }}" | base64 -d > service-account-key.json

          ssh ${{ secrets.SSH_USER }}@${{ secrets.SSH_HOST }} \
            "mkdir -p /home/${{ secrets.SSH_USER }}/AstridAI/production/$DEPLOY_DIR"

      - name: Copy project files to server
        run: |
          rsync -avz ./ \
            ${{ secrets.SSH_USER }}@${{ secrets.SSH_HOST }}:/home/${{ secrets.SSH_USER }}/AstridAI/production/$DEPLOY_DIR

      - name: Build and run Docker on remote server
        run: |
          ssh ${{ secrets.SSH_USER }}@${{ secrets.SSH_HOST }} bash -c "'
            cd /home/${{ secrets.SSH_USER }}/AstridAI/production/$DEPLOY_DIR

            echo Building Docker image...
            docker build -t astridai-web-chat-backend-production .

            echo Stopping old container if it exists...
            docker stop astridai-web-backend || true
            docker rm astridai-web-backend || true

            echo Running new container...
            docker run -d \
              --name astridai-web-backend \
              --network astridai_database \
              -p 5100:5100 \
              -v /home/${{ secrets.SSH_USER }}/AstridAI/production/AstridAI-Web-Backend/logs:/usr/src/app/logs \
              astridai-web-chat-backend-production

            echo Cleaning up all other deployments, keeping only the latest...
            cd /home/${{ secrets.SSH_USER }}/AstridAI/production
            ls -dt backend-app-* | tail -n +2 | xargs rm -rf || true
          '"